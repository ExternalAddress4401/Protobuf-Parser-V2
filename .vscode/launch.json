{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "launch",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsnd",
      "program": "index.ts",
      "args": [
        "--transpile-only",
        "--respawn",
        "--project",
        "tsconfig.dev.json"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
